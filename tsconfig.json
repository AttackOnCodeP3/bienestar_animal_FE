/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve",
    "baseUrl": "src",
    "paths": {
      "@components/*": ["app/components/*"],

      "@services/general": ["app/services/index.ts"],
      "@services/http": ["app/services/http/index.ts"], // Alias for http index file

      "@common/enums": ["app/common/enums/index.ts"], // Alias for enums index file
      "@common/enums/*": ["app/common/enums/*"],
      "@common/enums/i18n": ["app/common/enums/i18n/index.ts"], // Alias for i18n enums index file
      "@common/interfaces": ["app/common/interfaces/index.ts"], // Alias for interfaces index file
      "@common/interfaces/*": ["app/common/interfaces/*"],
      "@common/interfaces/http": ["app/common/interfaces/http/index.ts"], // Alias for http interfaces index file
      "@common/types": ["app/common/types/index.ts"], // Alias for types index file
      "@common/types/*": ["app/common/types/*"],
      "@common/constants/*": ["app/common/constants/*"],
      "common/forms/*": ["app/common/forms/*"], // Alias for forms directory
      "@common/forms": ["app/common/forms/index.ts"], // Alias for forms index file
      "@common/utils": ["app/common/utils/index.ts"], // Alias for utils index file

      "@animations/fade": ["app/animations/fade/index.ts"], // Alias for animations index fade file
      "@animations/fade/*": ["app/animations/fade/*"],

      "@animations/slide": ["app/animations/slide/index.ts"], // Alias for animations index slide file
      "@animations/slide/*": ["app/animations/slide/*"],

      "@components/user": ["app/components/user/index.ts"], // Alias for user component index file
      "@components/general": ["app/components/index.ts"], // Alias for general component index file
      "@models": ["app/models/index.ts"], // Alias for models index file

      "@models/dto": ["app/models/dto/index.ts"], // Alias for DTO models index file

      "@core/guards": ["app/core/guards/index.ts"], // Alias for guards index file
      "@core/interceptors": ["app/core/interceptors/index.ts"], // Alias for interceptors index file

      "@pages/*": ["app/pages/*"],
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
